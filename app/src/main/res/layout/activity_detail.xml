<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRequest"
        android:gravity="center"
        android:padding="40dp"
        android:text="@string/requested"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/request_dismiss"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDismiss"
            android:text="@string/dissmiss"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/request_approve"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorApprove"
            android:text="@string/approve"
            android:textAllCaps="true" />
    </LinearLayout>

</LinearLayout>
